<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="474" prefWidth="694.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.CatalogoSigController">

   
    <HBox layoutX="77.0" layoutY="22.0" prefHeight="27.0" prefWidth="296.0" styleClass="top-bar">
        <children>
            <Label prefHeight="28.0" prefWidth="220" styleClass="title" text="Tienda de Panes">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </children>
    </HBox>


    <MenuButton fx:id="menuNav" layoutX="14.0" layoutY="23.0" styleClass="menu-button" text="☰">
        <items>
            <MenuItem fx:id="itemCarrito" text="Carrito" />
            <MenuItem fx:id="itemFavoritos" text="Favoritos" />
            <MenuItem fx:id="itemHistorial" text="Historial" />
            <MenuItem fx:id="itemCerrar" text="Cerrar Sesión" />
        </items>
    </MenuButton>

    <!-- Drawer lateral oculto (opcional, por si luego lo animas) -->
    <VBox fx:id="drawer" alignment="TOP_LEFT" layoutX="-200" layoutY="48" prefHeight="426" prefWidth="200" spacing="8" styleClass="drawer">
        <children>
            <Button fx:id="btnFavoritos" maxWidth="Infinity" text="Favoritos" />
            <Button fx:id="btnCarrito" maxWidth="Infinity" text="Carrito" />
            <Button fx:id="btnHistorial" maxWidth="Infinity" text="Historial" />
            <Button fx:id="btnCerrar" maxWidth="Infinity" text="Cerrar sesión" />
        </children>
    </VBox>

   
    <GridPane fx:id="gridProductos" hgap="12" layoutX="32.0" layoutY="67.0" prefHeight="360" prefWidth="630" vgap="12">

        <columnConstraints>
            <ColumnConstraints percentWidth="33" />
            <ColumnConstraints percentWidth="33" />
            <ColumnConstraints percentWidth="33" />
        </columnConstraints>

    </GridPane>

   
    <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="438" spacing="10">
        <children>
            <Button fx:id="btnVolver" text="Volver" />
            <Label fx:id="lblPagina" text="Página 2" />
        </children>
    </HBox>

</AnchorPane>
